{
  "manifest_version": 3,
  "name": "Instant Word Translator",
  "description": "Übersetzt Wörter sofort per Mouse-Over in Ihre bevorzugte Sprache.",
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "icon-on-16.png",
      "48": "icon-on-48.png",
      "128": "icon-on-128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icon-on-16.png",
    "48": "icon-on-48.png",
    "128": "icon-on-128.png"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
